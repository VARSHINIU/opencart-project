<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">

    <listeners>
        <listener class-name="utilities.ExtentReportManager"/>
    </listeners>

    <test verbose="2" preserve-order="true"
          name="registration and login validation">
        <classes>
            <class name="testcases.TC001Accountregister">
                <methods>
                    <include name="validation"/>
                </methods>
            </class>
            <class name="testcases.TC002loginaccount">
                <methods>
                    <include name="loginvalidation"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>